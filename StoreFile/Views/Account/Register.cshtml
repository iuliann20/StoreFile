@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_RegisterLayout";
}
@section Styles{
    <link href="~/js/vendor/mdi-font/css/material-design-iconic-font.css" rel="stylesheet" />
    <link href="~/js/vendor/font-awesome-4.7/css/font-awesome.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/js/vendor/datepicker/daterangepicker.css" rel="stylesheet" />
    <link href="~/css/account.css" rel="stylesheet" />
}


<div class="page-wrapper p-t-130 p-b-100 font-poppins">
    <div class="wrapper wrapper--w680">
        <div class="card card-4">
            <div class="card-body">
                <h2 class="title">Registration Form</h2>
                <form id="register-form" method="POST" asp-controller="Account" asp-action="Register" enctype="multipart/form-data">
                    <div class="row row-space">
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">first name</label>
                                <input class="input--style-4" type="text" name="FirstName" asp-for="FirstName">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">last name</label>
                                <input class="input--style-4" type="text" name="LastName" asp-for="LastName">
                            </div>
                        </div>
                    </div>
                    <div class="row row-space">
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">Birthday</label>
                                <div class="input-group-icon">
                                    <input class="input--style-4 js-datepicker" type="text" name="Birthday" asp-for="BirthDay">
                                    <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row row-space">
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">Email</label>
                                <input class="input--style-4" type="email" name="Email" asp-for="Email">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">Phone Number</label>
                                <input class="input--style-4" type="text" name="PhoneNumber" asp-for="PhoneNumber">
                            </div>
                        </div>
                    </div>
                    <div class="row row-space">
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">Password</label>
                                <input class="input--style-4" type="password" name="Password" asp-for="Password">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group">
                                <label class="label">Confirm Password</label>
                                <input class="input--style-4" type="password" name="RePassword" asp-for="RePassword">
                            </div>
                        </div>
                    </div>
                    <div class="p-t-15">
                        <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                        <a class="btn-back btn btn-primary btn--radius-2 cursor-pointer" asp-action="Index" asp-controller="Share">Back to Home</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/vendor/datepicker/moment.min.js"></script>
    <script src="~/js/vendor/datepicker/daterangepicker.js"></script>
    <script src="~/js/account.js"></script>
}
